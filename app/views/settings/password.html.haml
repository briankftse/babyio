#settings-password
  .page-header
    %h1 Change Password

  .row
    .span2
      = render "settings/nav"

    .span10
      = form_for :user, :url => settings_password_url,
        :html => { :class => "form-horizontal well" } do |f|
        %fieldset
          = f.hidden_field :reset_password_token
          .control-group
            %label.control-label Current password
            .controls
              = password_field_tag :current_password, nil
              %p.help-block
                = link_to "Forgot your password?", new_password_path(:user)
          .control-group
            %label.control-label New password
            .controls
              = password_field_tag :password, nil
          .control-group
            %label.control-label Confirm new password
            .controls
              = password_field_tag :password_confirmation, nil
          .form-actions
            %button.btn.btn-primary.btn-large Save

