#settings-account
  .page-header
    %h1 Settings

  .row
    .span2
      = render "settings/nav"

    .span10
      = form_for :user, :url => registration_path(:user),
        :html => { :method => :put, :class => "form-horizontal well" } do |f|
        %fieldset
          .control-group
            %label.control-label Profile picture
            .controls
              = image_tag @user.avatar
              = f.file_field :avatar
          %hr
          .control-group
            %label.control-label Name
            .controls
              = f.text_field :name
          .control-group
            %label.control-label Email
            .controls
              = f.text_field :email
          .form-actions
            %button.btn.btn-primary.btn-large Save
