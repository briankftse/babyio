!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Baby.io"
    %meta{ :charset => "utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :name => "viewport",
           :content => "width=device-width, initial-scale=1, maximum-scale=1" }
    %meta{ :content => "Baby.io", :name => "description" }
    %meta{ :content => "Baby.io", :name => "author" }

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    - unless @no_header
      = render "layouts/header"
    #main{ :role => "main" }
      .container-fluid
        .row-fluid
          .sidebar.span3
          .content.span9
            = render "layouts/messages"
            = yield
            %footer
